{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@routes/*": [
        "routes/*"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ]
}